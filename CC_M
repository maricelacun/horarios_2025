    <script>
        // Función para guardar todos los datos del horario
        function saveAllData() {
            // Guardar datos de los encabezados
            const grade = document.getElementById('grade').value;
            const period = document.getElementById('period').value;
            const tutor = document.getElementById('tutor').value;
            const grade2 = document.getElementById('grade2').value;
            const period2 = document.getElementById('period2').value;
            const tutor2 = document.getElementById('tutor2').value;
            
            // Guardar datos de las celdas editables del primer horario
            const schedule1Cells = document.querySelectorAll('#schedule1 .editable');
            const schedule1Data = [];
            schedule1Cells.forEach(cell => {
                schedule1Data.push(cell.textContent);
            });
            
            // Guardar datos de las celdas editables del segundo horario
            const schedule2Cells = document.querySelectorAll('#schedule2 .editable');
            const schedule2Data = [];
            schedule2Cells.forEach(cell => {
                schedule2Data.push(cell.textContent);
            });
            
            // Crear objeto con todos los datos
            const allData = {
                headers: { grade, period, tutor, grade2, period2, tutor2 },
                schedule1: schedule1Data,
                schedule2: schedule2Data
            };
            
            // Guardar en localStorage
            localStorage.setItem('horarioCompleto', JSON.stringify(allData));
            alert('Horario guardado correctamente');
        }
        
        // Función para cargar los datos guardados
        function loadSavedData() {
            const savedData = localStorage.getItem('horarioCompleto');
            if (savedData) {
                const allData = JSON.parse(savedData);
                
                // Cargar datos de encabezados
                document.getElementById('grade').value = allData.headers.grade || '';
                document.getElementById('period').value = allData.headers.period || '2025-2026';
                document.getElementById('tutor').value = allData.headers.tutor || '';
                document.getElementById('grade2').value = allData.headers.grade2 || '';
                document.getElementById('period2').value = allData.headers.period2 || '2025-2026';
                document.getElementById('tutor2').value = allData.headers.tutor2 || '';
                
                // Cargar datos del primer horario
                const schedule1Cells = document.querySelectorAll('#schedule1 .editable');
                schedule1Cells.forEach((cell, index) => {
                    cell.textContent = allData.schedule1[index] || '';
                });
                
                // Cargar datos del segundo horario
                const schedule2Cells = document.querySelectorAll('#schedule2 .editable');
                schedule2Cells.forEach((cell, index) => {
                    cell.textContent = allData.schedule2[index] || '';
                });
                
                alert('Horario cargado correctamente');
            } else {
                alert('No hay horarios guardados');
            }
        }
        
        function updateHeaders() {
            const grade = document.getElementById('grade').value;
            const period = document.getElementById('period').value;
            const tutor = document.getElementById('tutor').value;
            
            // Actualizar segundo horario con los mismos valores
            document.getElementById('grade2').value = grade;
            document.getElementById('period2').value = period;
            document.getElementById('tutor2').value = tutor;
        }
        
        function clearAll() {
            // Limpiar campos editables
            document.querySelectorAll('[contenteditable="true"]').forEach(el => {
                el.textContent = '';
            });
            
            // Limpiar inputs
            document.getElementById('grade').value = '';
            document.getElementById('period').value = '2025-2026';
            document.getElementById('tutor').value = '';
            document.getElementById('grade2').value = '';
            document.getElementById('period2').value = '2025-2026';
            document.getElementById('tutor2').value = '';
            
            // Limpiar localStorage
            localStorage.removeItem('horarioCompleto');
        }
        
        // Cargar datos guardados al iniciar (opcional)
        document.addEventListener('DOMContentLoaded', function() {
            // Puedes descomentar esta línea si quieres que se cargue automáticamente al abrir la página
            // loadSavedData();
        });
    </script>
</body>
